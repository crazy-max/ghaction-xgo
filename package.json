{
  "name": "golang-cgo-cross-compiler",
  "description": "Golang CGO cross compiler using xgo",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "test": "jest --coverage",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "cleanup-paths": "removeNPMAbsolutePaths ./ --force --fields _where _args",
    "pre-checkin": "npm run format && npm run cleanup-paths && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-xgo.git"
  },
  "keywords": [
    "actions",
    "xgo",
    "golang",
    "cgo",
    "cross-compiler"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/http-client": "^1.0.8",
    "@actions/tool-cache": "^1.5.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@zeit/ncc": "^0.22.3",
    "dotenv": "^8.2.0",
    "jest": "^25.5.4",
    "jest-circus": "^26.0.1",
    "jest-runtime": "^25.5.4",
    "prettier": "^2.0.5",
    "removeNPMAbsolutePaths": "^2.0.0",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.5",
    "typescript-formatter": "^7.2.2"
  }
}
