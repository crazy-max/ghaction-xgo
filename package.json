{
  "name": "golang-cgo-cross-compiler",
  "description": "Golang CGO cross compiler using xgo",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "test": "jest --coverage",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pre-checkin": "yarn run format && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-xgo.git"
  },
  "keywords": [
    "actions",
    "xgo",
    "golang",
    "cgo",
    "cross-compiler"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/http-client": "^1.0.9",
    "@actions/tool-cache": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@vercel/ncc": "^0.24.1",
    "dotenv": "^8.2.0",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "jest-runtime": "^26.4.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "typescript-formatter": "^7.2.2"
  }
}
